<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="20dp">

    <TextView
        android:id="@+id/traffic_url"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="3"
        android:ellipsize="end"
        android:textSize="12dp"
        tools:text="http://cdn1.lbesec.com/products/history/20131220/privacyspace_rel_2.2.1617.apkhttp://cdn1.lbesec.com/products/history/20131220/privacyspace_rel_2.2.1617.apkhttp://cdn1.lbesec.com/products/history/20131220/privacyspace_rel_2.2.1617.apkhttp://cdn1.lbesec.com/products/history/20131220/privacyspace_rel_2.2.1617.apk" />

    <LinearLayout
        android:id="@+id/traffic_style1"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/traffic_up_down_mb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:textSize="12dp"
            tools:text="上行流量：1.00MB， 下行流量：0B" />

        <TextView
            android:id="@+id/traffic_category"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="11dp"
            android:textColor="#D61515"
            tools:text="流量过大" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/traffic_style2"
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/traffic_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:textSize="12dp"
            tools:text="1.40Kb" />

        <TextView
            android:id="@+id/request_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dk_dp_20"
            android:textSize="12dp"
            tools:text="15" />

        <TextView
            android:id="@+id/traffic_view_detail"
            android:layout_width="0dp"
            android:textSize="11dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:text="点击查看详情"
            android:textColor="#ff0099cc" />
    </LinearLayout>

    <TextView
        android:id="@+id/detail_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:visibility="gone"
        android:textSize="12dp"/>
</LinearLayout>